[Unit]
Description=Growautomation Service
After=network.target
After=mariadb.service

[Service]
Type=simple
ExecStart=/usr/bin/python3 /etc/growautomation/agent/service/service.py
ExecReload=/bin/kill -10 $MAINPID
TimeoutStopSec=30
User=growautomation
Group=growautomation
Restart=on-failure
RestartSec=5s

[Install]
WantedBy=multi-user.target