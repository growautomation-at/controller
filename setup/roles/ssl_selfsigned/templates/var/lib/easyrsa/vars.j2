set_var EASYRSA_REQ_COUNTRY	    "{{ loop_easyrsa_req_country }}"
set_var EASYRSA_REQ_PROVINCE    "{{ loop_easyrsa_req_province }}"
set_var EASYRSA_REQ_CITY        "{{ loop_easyrsa_req_city }}"
