set_var EASYRSA_KEY_SIZE	    "{{ loop_easyrsa_key_size }}"
set_var EASYRSA_ALGO		    "{{ loop_easyrsa_key_algo }}"
set_var EASYRSA_CA_EXPIRE	    "{{ loop_easyrsa_ca_runtime_days }}"
set_var EASYRSA_CERT_EXPIRE	    "{{ loop_easyrsa_cert_runtime_days }}"
